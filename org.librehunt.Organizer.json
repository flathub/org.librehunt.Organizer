{
    "app-id" : "org.librehunt.Organizer",
    "runtime" : "org.gnome.Platform",
    "runtime-version" : "3.36",
    "sdk" : "org.gnome.Sdk",
    "command" : "organizer",
    "finish-args" : [
        "--share=ipc",
        "--socket=x11",
        "--socket=wayland",
        "--filesystem=home",
        "--filesystem=xdg-run/dconf",
        "--filesystem=~/.config/dconf:ro"
    ],
    "cleanup" : [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "*.la",
        "*.a"
    ],
    "modules" : [
    	{   "name" : "libhandy",
            "buildsystem" : "meson",
            "config-opts": [
                "-Dglade_catalog=disabled",
                "-Dvapi=false",
                "-Dtests=false",
                "-Dexamples=false"
            ],
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://gitlab.gnome.org/GNOME/libhandy.git",
                    "tag": "v0.0.9",
                    "commit": "56b0aa62f6251ee19a88fc208b7ca8dcf9c9633c"
                }
            ]
        },
        {
            "name" : "organizer",
            "buildsystem" : "meson",
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://gitlab.gnome.org/aviwad/Organizer.git",
                    "tag" : "v0.201",
                    "commit" : "87e988e0384eca067b519324c183421125092da7"
                }
            ]
        }
    ]
}
